<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/me_head_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_head_big_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhan_subject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/top_background123"
        android:paddingBottom="@dimen/size_eight"
       >

        <yksg.kuangkuang.views.CircleImageView
            android:id="@+id/me_head_small"
            android:layout_width="@dimen/me_head_small_size"
            android:layout_height="@dimen/me_head_small_size"
            android:layout_gravity="center"
            android:src="@mipmap/zhan_circle_head"
            android:layout_marginTop="@dimen/size_eight"
            android:layout_marginBottom="@dimen/size_eight" />

        <TextView
            android:id="@+id/me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_eight"
            android:text="硄硄"
            android:textSize="@dimen/big_middle_text_size"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/me_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="祝您心想事成"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_me_top_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/login_p_l_r"
                    android:paddingBottom="@dimen/login_p_l_r"
                    android:text="@string/fans"/>
                <TextView
                    android:id="@+id/me_fans_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/kuangkuang_yellow"
                    android:paddingTop="@dimen/login_p_l_r"
                    android:paddingBottom="@dimen/login_p_l_r"
                    android:paddingLeft="@dimen/login_p_l_r"
                    android:text="0"/>
            </LinearLayout>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_eight"
                android:layout_marginRight="@dimen/size_eight"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/layout_me_top_follows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/login_p_l_r"
                    android:paddingBottom="@dimen/login_p_l_r"
                    android:textColor="@color/white"
                    android:text="@string/follows"/>
                <TextView
                    android:id="@+id/me_follows_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/login_p_l_r"
                    android:paddingBottom="@dimen/login_p_l_r"
                    android:paddingLeft="@dimen/login_p_l_r"
                    android:textColor="@color/kuangkuang_yellow"
                    android:text="0"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</FrameLayout>