<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/me_head_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_head_big_height"
        android:scaleType="fitXY"
        android:src="@mipmap/images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/signup__text_m_l_r"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/login_p_l_r">

        <klsd.kuangkuang.views.CircleImageView
            android:id="@+id/me_head_small"
            android:layout_width="@dimen/me_head_small_size"
            android:layout_height="@dimen/me_head_small_size"

            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_eight"
            android:src="@mipmap/android01" />

        <TextView
            android:id="@+id/me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_eight"
            android:text="开心就好"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/personal_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我是一个有理想的人，我愿意为之奋斗"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>