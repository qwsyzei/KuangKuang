<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:src="@mipmap/images"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/login_p_l_r"
android:layout_marginBottom="@dimen/signup__text_m_l_r"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/size_eight"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="开心就好"/>
        <TextView
            android:id="@+id/personal_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我是一个有理想的人，我愿意为之奋斗"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</FrameLayout>