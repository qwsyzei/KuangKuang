<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/me_head_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_head_big_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhan_subject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/top_background123"
        android:paddingBottom="@dimen/signup__text_m_l_r"
       >

        <klsd.kuangkuang.views.CircleImageView
            android:id="@+id/me_head_small"
            android:layout_width="@dimen/me_head_small_size"
            android:layout_height="@dimen/me_head_small_size"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_eight" />

        <TextView
            android:id="@+id/me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_eight"
            android:text="硄硄"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/me_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="祝您心想事成"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/me_fans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="@dimen/login_p_l_r"
                android:padding="@dimen/login_p_l_r"
                android:text="@string/fans"/>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_eight"
                android:layout_marginRight="@dimen/size_eight"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/me_follows_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/login_p_l_r"
                android:textColor="@color/white"
                android:text="@string/follows"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>