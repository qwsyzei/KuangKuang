<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="klsd.kuangkuang.main.S_AllCommentActivity">
    <LinearLayout
        android:id="@+id/all_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title_two"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swip_s_all_comment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/lightgray">
    <ListView
        android:id="@+id/listview_allcomment"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_height="match_parent"
    ></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/all_comment_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/comment_send"/>
    </LinearLayout>
</LinearLayout>
