<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yksg.kuangkuang.main.S_AllCommentActivity">

    <LinearLayout
        android:id="@+id/all_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_two" />
    </LinearLayout>

    <yksg.kuangkuang.views.PullToRefreshView
        android:id="@+id/pull_refresh_view_allcomment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/lightgray">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <yksg.kuangkuang.views.SelfListView
                    android:id="@+id/listview_allcomment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_eight"
                    android:background="@color/white"></yksg.kuangkuang.views.SelfListView>
            </LinearLayout>
        </ScrollView>

    </yksg.kuangkuang.views.PullToRefreshView>

    <LinearLayout
        android:id="@+id/all_comment_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/comment_send" />
    </LinearLayout>
</LinearLayout>
