<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="yksg.kuangkuang.main.T_CertificateActivity">
    <RelativeLayout
        android:id="@+id/user_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title_three" />
    </RelativeLayout>
<WebView
    android:id="@+id/webview_certifiate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
></WebView>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/certificate_gia_m_t"
    android:layout_marginBottom="@dimen/certificate_gia_m_b"
    android:layout_gravity="center"
    android:src="@mipmap/gia"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:paddingLeft="@dimen/certificate_edit_p"
        android:paddingRight="@dimen/certificate_edit_p"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_middle_text_size"
            android:text="@string/certification_number"/>
        <EditText
            android:id="@+id/certificate_edit_number"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/base_margin"
            android:paddingLeft="@dimen/login_p_l_r"
            android:digits="0123456789"
            android:maxLength="10"
            android:inputType="number"
            android:maxLines="1"
            android:background="@drawable/small_corner_box"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/signup__text_m_l_r"
        android:paddingLeft="@dimen/certificate_buttonlayout_p_l"
        android:paddingRight="@dimen/certificate_buttonlayout_p_r"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/certificate_tv_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_text_box"
            android:paddingTop="@dimen/login_p_l_r"
            android:paddingBottom="@dimen/login_p_l_r"
            android:paddingLeft="@dimen/signup__text_m_l_r"
            android:paddingRight="@dimen/signup__text_m_l_r"
            android:textColor="@color/kuangkuang_yellow"
            android:text="@string/demand"/>
        <TextView
            android:id="@+id/certificate_tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/certificate_button_m_l"
            android:background="@drawable/small_corner_box"
            android:paddingTop="@dimen/login_p_l_r"
            android:paddingBottom="@dimen/login_p_l_r"
            android:paddingLeft="@dimen/signup__text_m_l_r"
            android:paddingRight="@dimen/signup__text_m_l_r"
            android:text="@string/reset"/>
    </LinearLayout>
</LinearLayout>
