<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/size_eight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <klsd.kuangkuang.views.CircleImageView
            android:id="@+id/item_allcomment_head_pic"
            android:layout_width="@dimen/subject_author_head_size"
            android:layout_height="@dimen/subject_author_head_size"
            android:src="@mipmap/zhan_head_comment" />

        <TextView
            android:id="@+id/item_allcomment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_weight="1"
            android:textColor="@color/kuangkuang_yellow"
            android:text="我爱谁" />

        <TextView
            android:id="@+id/item_allcomment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text="6-27  11:00" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_circle_detail_comment_m_t"
        android:paddingLeft="@dimen/item_circle_detail_comment_m_l"
        android:paddingTop="@dimen/login_p_l_r"
        android:paddingBottom="@dimen/login_p_l_r"
        >
        <TextView
            android:id="@+id/item_comment_detail_replytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/item_circle_detail_reply"
            android:text="@string/reply" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_layout_allcomment_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/allcomment_zan" />

            <TextView
                android:id="@+id/all_comment_zan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_p_l_r"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_layout_allcomment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/signup__text_m_l_r"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/allcomment_comment" />

            <TextView
                android:id="@+id/all_comment_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_p_l_r"
                android:text="0" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_allcomment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/signup__text_m_l_r"
            android:src="@mipmap/allcomment_more" />

    </LinearLayout>

</LinearLayout>