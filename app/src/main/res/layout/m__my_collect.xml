<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    tools:context="klsd.kuangkuang.main.M_MyCollectActivity">
    <LinearLayout
        android:id="@+id/my_collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title_two"/>
    </LinearLayout>
<TextView
    android:id="@+id/my_collect_tv_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/base_margin"
    android:visibility="gone"
    android:text="我的收藏：8"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swip_my_collect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:layout_marginTop="@dimen/login_p_l_r"
  >
        <ListView
            android:id="@+id/listview_my_collect"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_eight"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/login_p_l_r"
            android:divider="@color/lightgray"
       ></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>