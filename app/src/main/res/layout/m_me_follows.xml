<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/login_p_l_r"
    android:id="@+id/me_follows_layout"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/me_four_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:paddingLeft="@dimen/login_p_l_r"
        android:layout_centerVertical="true"
        android:paddingRight="2dp"
        android:layout_marginLeft="@dimen/base_margin"
        android:src="@mipmap/icon_content_eye_open"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_follows"
        android:padding="@dimen/base_margin"
        android:layout_toRightOf="@+id/me_four_im"
        android:layout_marginLeft="2dp"
        android:textSize="@dimen/middle_text_size"
        android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/signup__text_m_l_r"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/clickable"/>
</RelativeLayout>