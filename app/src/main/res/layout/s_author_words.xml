<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_me_myword_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/big_middle_text_size"
            android:gravity="center"
            android:text="@string/release_done_words"
            />

    </LinearLayout>

    <yksg.kuangkuang.views.SelfGridView
        android:id="@+id/gridview_author_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_p_l_r"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:horizontalSpacing="@dimen/login_p_l_r"
        android:verticalSpacing="@dimen/login_p_l_r"
        android:numColumns="2"
        android:smoothScrollbar="true"
        android:soundEffectsEnabled="true"></yksg.kuangkuang.views.SelfGridView>

</LinearLayout>