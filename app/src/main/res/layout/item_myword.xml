<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/item_myword_day"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/large_text_size"
    android:textStyle="bold"
    android:layout_marginLeft="@dimen/base_margin"
    android:layout_gravity="center"
    android:textColor="@color/black"
    android:text="10"/>
    <TextView
        android:id="@+id/item_myword_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/black"
        android:text="7月"/>
    <ImageView
        android:id="@+id/item_myword_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_p_l_r"
        android:src="@mipmap/touxiang03"/>
    <TextView
        android:id="@+id/item_myword_content"
        android:background="@color/lightgray"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/login_p_l_r"
        android:paddingBottom="@dimen/login_p_l_r"
  android:paddingLeft="@dimen/login_p_l_r"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="刚在钻石小鸟买的钻戒，好漂亮啊,虽"/>
</LinearLayout>