<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/login_p_l_r"
    android:background="@drawable/clickstate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_my_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text_size"
        android:layout_marginLeft="@dimen/login_m_l_r"
        android:text="硄硄通知"/>
    <TextView
        android:id="@+id/item_my_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_middle_text_size"
        android:layout_marginRight="@dimen/login_m_l_r"
        android:layout_alignParentRight="true"
        android:text="10秒钟前"/>
</RelativeLayout>
    <TextView
        android:id="@+id/item_my_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_m_l_r"
        android:layout_marginTop="@dimen/login_p_l_r"
        android:textSize="@dimen/small_text_size"
        />
</LinearLayout>