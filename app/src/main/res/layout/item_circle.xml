<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/login_p_l_r"
    android:background="@drawable/box"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/login_p_l_r"
        android:layout_marginLeft="@dimen/login_p_l_r"
        android:layout_marginRight="@dimen/base_margin">

        <ImageView
            android:id="@+id/item_circle_head_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/head_pic" />

        <TextView
            android:id="@+id/item_circle_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:layout_toRightOf="@+id/item_circle_head_pic"
            android:text="刘关张" />

        <TextView
            android:id="@+id/item_circle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="发布时间1小时前" />
    </RelativeLayout>
<klsd.kuangkuang.views.SelfGridView
    android:id="@+id/gridview_circle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:numColumns="3"
    android:smoothScrollbar="true"
    android:soundEffectsEnabled="true"
    android:stretchMode="columnWidth"></klsd.kuangkuang.views.SelfGridView>
    <TextView
        android:id="@+id/item_circle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_p_l_r"
        android:layout_marginRight="@dimen/login_p_l_r"
        android:text="钻石趣闻"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/item_circle_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_p_l_r"
        android:text=""
        android:textSize="@dimen/middle_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_font_note" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/login_p_l_r">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_views" />

        <TextView
            android:id="@+id/item_circle_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:text="78" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_like" />

        <TextView
            android:id="@+id/item_circle_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:text="10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_comment" />

        <TextView
            android:id="@+id/item_circle_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/login_p_l_r"
            android:text="3" />
    </LinearLayout>
</LinearLayout>