<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/login_p_l_r"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_item_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_subject_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/s_subject_back_m_b"
            android:src="@mipmap/abcd"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/signup__text_m_l_r"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_subject_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/login_p_l_r"
                android:text="马小飞"
                />
            <klsd.kuangkuang.views.CircleImageView
                android:id="@+id/item_subject_head_pic"
                android:layout_width="@dimen/subject_author_head_size"
                android:layout_height="@dimen/subject_author_head_size"
                android:src="@mipmap/touxiang03"/>
        </LinearLayout>
    </FrameLayout>
        <TextView
            android:id="@+id/item_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_subject_title_m"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_marginRight="@dimen/login_p_l_r"
            android:text="钻石趣闻"
            android:textSize="@dimen/middle_text_size"
            />
        <TextView
            android:id="@+id/item_subject_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_p_l_r"
            android:text=""
            android:textSize="@dimen/middle_text_size"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_font_note"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/login_p_l_r"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_views"/>
        <TextView
            android:id="@+id/item_subject_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:text="78"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_eight"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_like"/>
        <TextView
            android:id="@+id/item_subject_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:text="10"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_eight"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/small_comment"/>
        <TextView
            android:id="@+id/item_subject_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:text="3"
            />
    </LinearLayout>
</LinearLayout>