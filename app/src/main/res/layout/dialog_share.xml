<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/dialog_background"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/base_margin"
    android:paddingRight="@dimen/base_margin"
    android:layout_marginTop="@dimen/dialog_share_m_t"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/layout_share_to_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/share_qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/qq"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_share_to_weibo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/share_weibo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="@string/weibo"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_share_to_wechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/share_wechat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/wechat"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_share_to_friend_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/share_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/friend_circle"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>