<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context="com.yksg.main.NewPhoneProActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unbindphone_title">
        <include layout="@layout/title_two"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/unbindphone_title"
        android:background="@color/gray_in_orders" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin"
        android:layout_below="@+id/unbindphone_title"
        android:id="@+id/linearLayout2"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/base_margin"
            android:paddingBottom="@dimen/base_margin"
            android:paddingLeft="@dimen/login_p_l_r"
            android:paddingRight="@dimen/login_p_l_r"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/signup__text_m_l_r"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text_size"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/new_phone_tv_phonenumber"
                android:layout_width="0dp"
                android:textSize="@dimen/new_title_size"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/login_p_l_r"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="@dimen/size_eight"
            android:background="@color/white"
            android:paddingBottom="@dimen/base_margin"
            android:paddingLeft="@dimen/login_p_l_r"
            android:paddingRight="@dimen/login_p_l_r"
            android:paddingTop="@dimen/base_margin">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/signup__text_m_l_r"
                android:layout_weight="2"
                android:text="@string/auth_code"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text_size" />

            <EditText
                android:id="@+id/new_phone_pro_edit_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:hint="@string/auth_code"
                android:maxLength="6"
                android:maxLines="1"
                android:textColorHint="@color/light_font_note"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/new_phone_pro_tv_getcode"
                android:layout_width="0dp"
                android:layout_height="@dimen/code_button_height"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/box"
                android:gravity="center"
                android:clickable="true"
                android:onClick="getAuthCode"
                android:text="@string/get_auth_code"
                android:textColor="@color/black" />

        </LinearLayout>


            <Button
                android:id="@+id/new_phone_btn_change"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/base_margin"
                android:textColor="@color/white"
                android:background="@color/kuangkuang_yellow"
                android:textSize="@dimen/middle_text_size"
                android:text="@string/next" />


    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_phone_hint"
        android:gravity="center"
        android:layout_marginBottom="@dimen/base_margin"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/base_margin"
        android:textColor="@color/light_font_note"
        android:textSize="@dimen/new_hint_size"
        />
</RelativeLayout>
