<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_author_frame_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_eight"
            android:src="@mipmap/wing" />

        <yksg.kuangkuang.views.CircleImageView
            android:id="@+id/article_author_pic"
            android:layout_width="@dimen/article_author_head_size"
            android:layout_height="@dimen/article_author_head_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin"
            android:src="@mipmap/zhan_circle_head" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="莎丽"
            android:textColor="@color/black"
            android:textSize="@dimen/big_middle_text_size" />

        <TextView
            android:id="@+id/article_author_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_eight"
            android:text="作家，珠宝类产品专家" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/time_or_history" />

            <TextView
                android:id="@+id/article_author_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_p_l_r"
                android:text="1天前" />
        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin"
            android:background="@color/light_font_note"></View>

        <ImageView
            android:id="@+id/im_s_artile_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_p_l_r"
            android:src="@mipmap/follow_btn" />

        <TextView
            android:id="@+id/article_author_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_margin"
            android:text="如何搞定巴黎时装周"
            android:textSize="@dimen/new_title_size" />

        <TextView
            android:id="@+id/article_author_title_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="[明星珠宝专题]"
            android:textColor="@color/kela_yellow" />
    </LinearLayout>

</LinearLayout>
