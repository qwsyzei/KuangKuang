<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_collect_height"
    android:background="@drawable/clickstate"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_my_collect_pic"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhan_subject" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/item_my_collect_tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_pic_layout_height"
            android:layout_alignParentBottom="true"
            android:background="@color/top_background123"
            android:gravity="center"
            android:maxLines="1"
            android:text="钻石"
            android:textColor="@color/white" />
    </RelativeLayout>

</FrameLayout>