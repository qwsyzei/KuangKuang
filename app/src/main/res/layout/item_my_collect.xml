<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_my_collect_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/abcd" />

    <TextView
        android:id="@+id/item_my_collect_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_p_l_r"
        android:layout_marginTop="@dimen/base_margin"
        android:text="钻石" />

    <TextView
        android:id="@+id/item_my_collect_tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_p_l_r"
        android:text="钻石的美丽谁能懂" />
</LinearLayout>