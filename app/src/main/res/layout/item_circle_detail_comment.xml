<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/size_eight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <klsd.kuangkuang.views.CircleImageView
            android:id="@+id/item_circle_detail_head_pic"
            android:layout_width="@dimen/subject_author_head_size"
            android:layout_height="@dimen/subject_author_head_size"
            android:src="@mipmap/zhan_head_comment" />

        <TextView
            android:id="@+id/item_circle_detail_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_p_l_r"
            android:layout_weight="1"
            android:textColor="@color/kuangkuang_yellow"
            android:text="我爱谁" />

        <TextView
            android:id="@+id/item_circle_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/new_hint_size"
            android:text="6-27  11:00" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_circle_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_circle_detail_comment_m_l"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/item_circle_detail_comment_m_t"
        android:text="这是什么" />

</LinearLayout>