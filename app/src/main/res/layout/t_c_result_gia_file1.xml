<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/base_margin"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/big_middle_text_size"
        android:layout_marginTop="@dimen/signup__text_m_l_r"
        android:layout_marginBottom="@dimen/base_margin"
        android:textColor="@color/black"
        android:text="@string/gia_diamond_file"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/signup__text_m_l_r"
        android:layout_marginRight="@dimen/signup__text_m_l_r"
        android:background="@color/ebpay_gray3"></View>
    <TextView
        android:id="@+id/c_result_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text_size"
        android:layout_marginTop="@dimen/signup__text_m_l_r"
        android:layout_marginBottom="@dimen/login_p_l_r"
        android:layout_marginLeft="@dimen/signup__text_m_l_r"
        android:paddingLeft="@dimen/login_p_l_r"
        android:textColor="@color/kuangkuang_yellow"
        android:text="@string/round"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/signup__text_m_l_r"
        android:layout_marginRight="@dimen/signup__text_m_l_r"
        android:background="@color/little_gray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:paddingLeft="@dimen/signup__text_m_l_r"
        android:paddingRight="@dimen/signup__text_m_l_r">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/measurement"/>
        <TextView
            android:id="@+id/c_result_measurement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:paddingLeft="@dimen/signup__text_m_l_r"
        android:paddingRight="@dimen/signup__text_m_l_r">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/weight"/>
        <TextView
            android:id="@+id/c_result_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:paddingLeft="@dimen/signup__text_m_l_r"
        android:paddingRight="@dimen/signup__text_m_l_r">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/color"/>
        <TextView
            android:id="@+id/c_result_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:paddingLeft="@dimen/signup__text_m_l_r"
        android:paddingRight="@dimen/signup__text_m_l_r">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/clarity"/>
        <TextView
            android:id="@+id/c_result_clarity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_c_result15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_eight"
        android:layout_marginLeft="@dimen/size_eight"
        android:layout_marginRight="@dimen/size_eight"
        android:paddingLeft="@dimen/signup__text_m_l_r"
        android:paddingRight="@dimen/signup__text_m_l_r">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/cut_grade"/>
        <TextView
            android:id="@+id/c_result_cut_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            />
    </LinearLayout>
</LinearLayout>