<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_marginTop="@dimen/size_eight"
    android:layout_marginBottom="@dimen/base_margin"
    android:background="@color/white"
    android:id="@+id/me_collect_layout"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/me_four_im"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/signup__text_m_l_r"
    android:src="@mipmap/collect_star"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:padding="@dimen/base_margin"
        android:layout_toRightOf="@+id/me_four_im"
        android:layout_marginLeft="@dimen/login_p_l_r"
        android:textSize="@dimen/middle_text_size"
     android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/signup__text_m_l_r"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/clickable"/>
</RelativeLayout>